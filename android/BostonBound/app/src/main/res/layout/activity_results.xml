<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Page title -->
    <TextView
        android:id="@+id/tvResultsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Boston Itinerary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <!-- Optional loading/story text -->
    <TextView
        android:id="@+id/tvLoading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Designing your itinerary..."
        android:visibility="gone"
        android:paddingBottom="8dp" />

    <!-- List takes remaining space; user scrolls this -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerItinerary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Button appears AFTER the list (not floating) -->
    <Button
        android:id="@+id/btnEditPreferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Preferences"
        android:layout_marginTop="12dp" />

    <!-- Center loading spinner overlay-ish (simple) -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="12dp" />

</LinearLayout>